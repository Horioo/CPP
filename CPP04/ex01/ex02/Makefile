NAME = Brain

CC = c++ -Wall -Werror -Wextra -Wno-shadow -std=c++98
RM = rm -f

FILES = main.cpp Cat.cpp Dog.cpp WrongAnimal.cpp Animal.cpp WrongCat.cpp Brain.cpp

SRCS = $(FILES)

OBJ = $(SRCS:.c=.o)

all: $(NAME)

$(NAME):	$(OBJ) $(LIBFT)
			$(CC) $(OBJ) -o $(NAME)
			@echo "$(NAME) created"	

fclean:
				@$(RM) $(NAME)
				@echo "$(NAME) deleted"

re:			fclean all

.PHONY:			start all fclean re